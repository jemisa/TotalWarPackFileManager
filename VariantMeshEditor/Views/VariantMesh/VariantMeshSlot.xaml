<UserControl x:Class="VariantMeshEditor.Views.VariantMesh.VariantMeshSlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VariantMeshEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" VerticalAlignment="Top">
    <Grid>
        <DockPanel LastChildFill="False">
            <Button x:Name ="PanelButton" DockPanel.Dock="Top" Click="Button_Click">Slot 0</Button>
            <StackPanel DockPanel.Dock="Top" x:Name="SlotStackPanel">
                <!--Slots stuff is added in code-->
            </StackPanel>
            <StackPanel>
                <Button DockPanel.Dock="Top">Add new</Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
