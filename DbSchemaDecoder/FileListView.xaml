<UserControl x:Class="DbSchemaDecoder.FileListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:DbSchemaDecoder"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="FileListView1"  ItemsSource="{Binding FileListModels}" SelectedItem="{Binding SelectedItem}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged" >
                    <i:InvokeCommandAction 
                        Command="{Binding Command}"
                        CommandParameter="{Binding ElementName=FileListView1, Path=SelectedItem}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <ListView.View>
                <GridView x:Name="grdTest">
                    <GridViewColumn Header="File" DisplayMemberBinding="{Binding FileName}"  Width="auto"/>
                </GridView>

            </ListView.View>

        </ListView>

    </Grid>
</UserControl>
