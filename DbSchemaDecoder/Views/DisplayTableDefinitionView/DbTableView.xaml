<UserControl x:Class="DbSchemaDecoder.DisplayTableDefinitionView.DbTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DbSchemaDecoder.DisplayTableDefinitionView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label 
            Content="{Binding Path=DbTableViewModel.ParseResult, UpdateSourceTrigger=PropertyChanged}"
            Background="{Binding Path=DbTableViewModel.ResultColour, UpdateSourceTrigger=PropertyChanged}"
            />
       
        <DataGrid 
            IsReadOnly="true"
            Name="gridEmployees"  KeyUp="onKeyup" Margin="0,20,0,0">
        </DataGrid>
    </Grid>
</UserControl>
