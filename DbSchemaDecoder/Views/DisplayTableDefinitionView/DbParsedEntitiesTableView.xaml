 <UserControl x:Class="DbSchemaDecoder.DisplayTableDefinitionView.DbParsedEntitiesTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DbSchemaDecoder.DisplayTableDefinitionView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid 
            IsReadOnly="true"
            Name="gridEmployees" VerticalContentAlignment="Stretch" Margin="0,0,0,17">
        </DataGrid>
        <Label
            Content="{Binding Path=TableEntriesController.ViewModel.ParseResult, UpdateSourceTrigger=PropertyChanged}"
            Background="{Binding Path=TableEntriesController.ViewModel.ResultColour, UpdateSourceTrigger=PropertyChanged}" Height="15" VerticalContentAlignment="Stretch" Padding="5,0" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
